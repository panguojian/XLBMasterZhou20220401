<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#2f3034">
    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:text="温度："></TextView>
    <EditText android:id="@+id/ED01"
        android:layout_marginRight="80dp"
        android:textColor="#ffffff"
        android:hint="可设置范围值:2~45"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/type"></EditText>

    <TextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="280dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ED01"
        android:text="湿度："></TextView>
    <EditText android:id="@+id/ED02"
        android:layout_marginRight="80dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_vertical"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:hint="可设置范围值:4~90"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/index"></EditText>

    <TextView
        android:id="@+id/index03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="680dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ED01"
        android:text="延时关机："></TextView>
    <EditText android:id="@+id/ED03"
        android:layout_marginRight="80dp"
        android:textColor="#ffffff"
        android:layout_gravity="center_vertical"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:hint="设置范围值:1~90(秒)"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/index03"></EditText>

</androidx.constraintlayout.widget.ConstraintLayout>