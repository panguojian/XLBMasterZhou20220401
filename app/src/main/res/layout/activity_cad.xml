<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/xlb_main_bgimg"
    tools:context=".CadActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:gravity="end"
        android:background="@drawable/repeat_bg">
        <ImageButton
            android:id="@+id/bt_log1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="#0000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#87908d"
            android:textSize="40dp"
            android:layout_marginRight="980dp"
            android:text="@string/company_name1"></TextView>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <sfListView.CADListView
            android:id="@+id/cad_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </sfListView.CADListView>
    </ScrollView>

</LinearLayout>